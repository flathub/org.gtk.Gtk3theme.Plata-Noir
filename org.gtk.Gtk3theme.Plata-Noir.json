{
  "id": "org.gtk.Gtk3theme.Plata-Noir",
  "branch": "3.24",
  "runtime": "org.gnome.Sdk",
  "build-extension": true,
  "sdk": "org.gnome.Sdk",
  "runtime-version": "3.30",
  "appstream-compose": false,
  "separate-locales": false,
  "modules": [
    {
      "name": "Plata-Noir",
      "config-opts": [
        "--prefix=/usr/share/runtime",
        "--disable-mixed",
        "--disable-light",
        "--enable-dark",
        "--disable-compact"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.com/tista500/plata-theme-flatpak/-/archive/0.5.0/plata-theme-flatpak-0.5.0.tar.gz",
          "sha256": "bcb824442e83c956d78c58f4c03b5425b5d023f2c67b0fadc8fd8b232b1231c0"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.gtk.Gtk3theme.Plata-Noir.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose --basename=org.gtk.Gtk3theme.Plata-Noir --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Plata-Noir"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.gtk.Gtk3theme.Plata-Noir.appdata.xml"
        }
      ]
    }
  ]
}
